<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">
    <ImageView
       android:id="@+id/PlacePictureImageView"
       android:layout_width="match_parent"
       android:layout_height="200dp"
       android:scaleType="centerCrop" />
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:id="@+id/PlaceNameTextView"
        android:layout_alignLeft="@+id/PlacePictureImageView"
        android:layout_alignTop="@+id/PlacePictureImageView"
        android:layout_alignRight="@+id/PlacePictureImageView"
        android:layout_alignBottom="@+id/PlacePictureImageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:id="@+id/PlaceAddressTextView"
        android:layout_alignLeft="@+id/PlacePictureImageView"
        android:layout_alignBottom="@+id/PlacePictureImageView"
        android:layout_margin="16dp" />
</RelativeLayout>